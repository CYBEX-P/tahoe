{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "object_core",
  "description" : "Validate core structure of an object.",
  "required": ["itype", "uuid", "obj_type", "attributes"],
  "properties": {
    "itype": {"const" : "object"},
    "uuid": { "type": "string", "pattern" : "^object--[0-9a-fA-F]{8}\\-[0-9a-fA-F]{4}\\-[0-9a-fA-F]{4}\\-[89abAB][0-9a-fA-F]{3}\\-[0-9a-fA-F]{12}$" },
	"obj_type": { "enum" : ["attacker", "autonomous-system", "btc", "comment", "data", "domain", "dst", "dst_port", "duration", "end_time", "file", "hash", "host", "login_credential", "login_success", "network", "port", "protocol", "session_identifier", "shell_command", "src", "src_port", "ssh", "time", "uri", "url"]},
	"attributes": { "type" : "object"},
	"_ref" : { "type" : "array", "items" : { "type": "string", "pattern" : "^[attribute|event|raw]--[0-9a-fA-F]{8}\\-[0-9a-fA-F]{4}\\-[0-9a-fA-F]{4}\\-[89abAB][0-9a-fA-F]{3}\\-[0-9a-fA-F]{12}$"} }
  },
  "additionalProperties": false
}
